<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button style="?android:buttonBarButtonStyle"
        android:id="@+id/btn_add_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/add_header"
        android:textAllCaps="false" />

    <Button style="?android:buttonBarButtonStyle"
        android:id="@+id/btn_remove_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/remove_header"
        android:textAllCaps="false" />

    <Button style="?android:buttonBarButtonStyle"
        android:id="@+id/btn_add_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/add_footer"
        android:textAllCaps="false" />

    <Button style="?android:buttonBarButtonStyle"
        android:id="@+id/btn_remove_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/remove_footer"
        android:textAllCaps="false" />

</LinearLayout>
